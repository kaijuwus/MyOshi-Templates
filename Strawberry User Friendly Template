}

.profile-page textarea{
  background: rgba(255,246,251,.85) !important;
  border: 1px solid rgba(255,141,184,.22) !important;
  border-radius: var(--R-MD) !important;
  box-shadow: var(--SHADOW2) !important;
}

.profile-page input, .profile-page select{
  background: rgba(255,246,251,.80) !important;
  border: 1px solid rgba(216,15,58,.14) !important;
  border-radius: var(--R-SM) !important;
  box-shadow: var(--SHADOW2) !important;
