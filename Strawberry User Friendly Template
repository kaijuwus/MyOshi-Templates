/* =========================================================
   1) üçì ONLY TWEAK THESE (beginner-friendly controls)
   ---------------------------------------------------------
   Change THESE to customize the whole theme safely.
   ========================================================= */
.profile-page{
  /* ---- A) STRAWBERRY COLORS ----
     Tip: if it looks ‚Äútoo pink‚Äù, increase JAM (deeper red). */
  --PINK:  rgba(255,141,184,.70);   /* strawberry milk pink */
  --ROSE:  rgba(255, 79,134,.55);   /* rosy middle */
  --JAM:   rgba(216, 15, 58,.35);   /* jam red (try .45 for stronger strawberry) */

  /* Card backgrounds (how ‚Äúmilky‚Äù the glass feels) */
  --CREAM-TOP:    rgba(255,246,251,.92);
  --CREAM-BOTTOM: rgba(255,255,255,.60);

  /* Borders (more alpha = more outline) */
  --BORDER:  rgba(216, 15, 58,.18);
  --BORDER2: rgba(255,141,184,.22);

  /* Text */
  --INK:   rgba(56,18,34,.92);
  --MUTED: rgba(56,18,34,.62);

  /* ---- B) ROUNDNESS + SPACING ----
     Bigger numbers = rounder / puffier */
  --R-LG: 20px; /* card corners */
  --R-MD: 16px; /* input/button corners */
  --R-SM: 12px; /* small elements */

  --CARD-PAD: 12px; /* IMPORTANT for header alignment */
  --BLUR: 10px;     /* glass blur (0 = no blur) */

  /* ---- C) GLOW CONTROL (YES it‚Äôs supported) ----
     Turn glow OFF by setting --GLOW-ON to 0. */
  --GLOW-ON: 1;          /* 1 = ON, 0 = OFF */
  --GLOW-STRENGTH: 18px; /* bigger = glowier */
  --GLOW-ALPHA: .22;     /* 0.10 subtle, 0.30 strong */

  /* ---- D) SHADOWS (depth) ---- */
  --SHADOW:  0 14px 34px rgba(216,15,58,.10);
  --SHADOW2: 0 8px  18px rgba(56,18,34,.10);

  font-family: ui-rounded, system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif !important;
  color: var(--INK) !important;

  /* kaiju did NOT set background here, so your photo stays */
  padding: 18px 12px;
}


/* =========================================================
   2) üö´ DO NOT TOUCH THIS SECTION (structure + ‚Äúit doesn‚Äôt break‚Äù rules)
   ---------------------------------------------------------
   This section makes the layout behave and keeps headers flush.
   ========================================================= */
.profile-page, .profile-page * { box-sizing: border-box; }
.profile-page { overflow-x: hidden; }


/* =========================================================
   3) Links (strawberry candy)
   ---------------------------------------------------------
   If you want different link color: tweak PINK/JAM above.
   ========================================================= */
.profile-page a, .profile-page a:visited{
  color: rgba(216, 15, 58, .75) !important;
  text-decoration: none !important;
}
.profile-page a:hover{
  color: rgba(255, 47, 88, .95) !important;
  text-shadow: 0 0 10px rgba(255,141,184,.45);
}


/* =========================================================
   4) Cards (glass panels)
   ---------------------------------------------------------
   These are the big boxes around everything.
   ========================================================= */
.profile-page :is(
  section, article, aside,
  .card, .panel, .box,
  [class*="card"], [class*="Card"],
  [class*="panel"], [class*="Panel"],
  [class*="module"], [class*="Module"],
  [class*="widget"], [class*="Widget"]
){
  background: linear-gradient(180deg, var(--CREAM-TOP), var(--CREAM-BOTTOM)) !important;
  border: 1px solid var(--BORDER2) !important;
  border-radius: var(--R-LG) !important;

  /* depth */
  box-shadow: var(--SHADOW) !important;

  /* glass */
  backdrop-filter: blur(var(--BLUR));
  -webkit-backdrop-filter: blur(var(--BLUR));

  /* spacing + header alignment math */
  padding: var(--CARD-PAD) !important;
  overflow: hidden;
}
/* seam killer */
.profile-page :is(
  section, article, aside,
  .card, .panel, .box,
  [class*="card"], [class*="Card"],
  [class*="panel"], [class*="Panel"],
  [class*="module"], [class*="Module"],
  [class*="widget"], [class*="Widget"]
){
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
}

/* =========================================================
   5) Header bars (the strawberry ombre strip)
   ---------------------------------------------------------
   This is where ‚Äústrawberry‚Äù really shows.
   ========================================================= */
.profile-page :is(
  .card-header, .panel-heading, .panel-header,
  [class*="header"], [class*="Header"],
  [class*="titlebar"], [class*="Titlebar"]
){
  /* This fixes the ‚Äúheader inset‚Äù issue by canceling card padding */
  margin: calc(var(--CARD-PAD) * -1)
          calc(var(--CARD-PAD) * -1)
          var(--CARD-PAD)
          calc(var(--CARD-PAD) * -1) !important;

  padding: 10px 14px !important;

  background: linear-gradient(90deg,
    var(--PINK),
    var(--JAM),
    rgba(255,246,251,.92)
  ) !important;

  border-bottom: 1px solid var(--BORDER) !important;
  color: var(--INK) !important;

  border-radius: var(--R-LG) var(--R-LG) var(--R-MD) var(--R-MD) !important;

  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  gap: 10px !important;
}

.profile-page :is(
  .card-header *, .panel-heading *, .panel-header *,
  [class*="header"] *, [class*="Header"] *,
  [class*="titlebar"] *, [class*="Titlebar"] *
){
  color: inherit !important;
}


/* =========================================================
   6) Inner ‚Äúbubbles‚Äù (white rounded content boxes)
