}


/* =========================================================
   8) Buttons (strawberry milk mochi) 
   ========================================================= */
.profile-page :is(button, input[type="button"], input[type="submit"]){
  background: linear-gradient(180deg,
    rgba(255,141,184,.62),
    rgba(255,246,251,.92)
  ) !important;

  color: var(--INK) !important;
  border: 1px solid rgba(216,15,58,.14) !important;
  border-radius: var(--R-MD) !important;
  box-shadow: var(--SHADOW2) !important;
}

.profile-page :is(button:hover, input[type="button"]:hover, input[type="submit"]:hover){
  filter: brightness(1.03) saturate(1.06);
  box-shadow: 0 12px 26px rgba(216,15,58,.14) !important;
}


/* =========================================================
   9) üçì GLOW LAYER (underneath the sections)
   ---------------------------------------------------------
   This adds a ‚Äúcute aura‚Äù around cards + headers.
   Turn off by setting --GLOW-ON: 0;
   ========================================================= */
.profile-page :is(
  section, article, aside,
  .card, .panel, .box,
  [class*="card"], [class*="Card"],
  [class*="panel"], [class*="Panel"],
  [class*="module"], [class*="Module"],
  [class*="widget"], [class*="Widget"]
){
  /* The calc() lets us turn glow on/off with --GLOW-ON */
  box-shadow:
    0 0 calc(var(--GLOW-STRENGTH) * var(--GLOW-ON)) rgba(255,141,184,var(--GLOW-ALPHA)),
    0 0 calc((var(--GLOW-STRENGTH) + 10px) * var(--GLOW-ON)) rgba(216,15,58, calc(var(--GLOW-ALPHA) * .60)),
    var(--SHADOW) !important;
}


